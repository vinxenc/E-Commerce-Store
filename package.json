{
  "name": "affiliate-store",
  "version": "1.0.0",
  "description": "Affiliate Store",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "installConfig": {
    "hoistingLimits": "packages"
  },
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "start": "npm --prefix packages/backend run start",
    "test": "jest",
    "test:cov": "jest --coverage",
    "typecheck": "npx tsc --project tsconfig.json --noEmit --skipLibCheck",
    "prettier": "prettier --single-quote --write packages/**/*.{ts,js,json,tsx}",
    "lint": "eslint . --ext .ts",
    "lint:fix": " eslint . --ext .ts --fix",
    "prepare": "husky install",
    "backend:build": "npm --prefix packages/backend run build",
    "frontend:build": "npm --prefix packages/frontend run build",
    "build": "yarn run backend:build & yarn run frontend:build & cp -v packages/frontend/public packages/backend"
  },
  "engines": {
    "node": "18.x.0",
    "npm": "8.3.1"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.3",
    "@typescript-eslint/parser": "5.59.2",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "43.2.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "husky": "8.0.3",
    "prettier": "2.8.8",
    "eslint": "8.40.0"
  }
}
